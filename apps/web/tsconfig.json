{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../configs/tsconfig.react.json",
  "compilerOptions": {
    "types": ["@react-router/cloudflare", "vite/client", "@cloudflare/workers-types/experimental"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": { "~/*": ["./app/*"] },
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    ".react-router/types/**/*"
  ]
}
