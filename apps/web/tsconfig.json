{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../configs/tsconfig.react.json",
  "compilerOptions": {
    "types": ["@remix-run/cloudflare", "vite/client", "@cloudflare/workers-types/experimental"],
    "baseUrl": ".",
    "paths": { "~/*": ["./app/*"] }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ]
}
